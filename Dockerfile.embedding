# Container 1: Embedding Model Server
FROM nvidia/cuda:12.4.1-cudnn-runtime-ubuntu22.04

ENV DEBIAN_FRONTEND=noninteractive
ENV TZ=UTC
ENV MODEL_NAME=Qwen/Qwen3-Embedding-0.6B

# Install Python 3.12
RUN apt-get update && apt-get install -y \
    software-properties-common \
    git \
    wget \
    && add-apt-repository ppa:deadsnakes/ppa \
    && apt-get update \
    && apt-get install -y python3.12 python3.12-dev python3.12-venv \
    && wget https://bootstrap.pypa.io/get-pip.py \
    && python3.12 get-pip.py \
    && ln -sf /usr/bin/python3.12 /usr/bin/python \
    && ln -sf /usr/local/bin/pip3.12 /usr/bin/pip \
    && rm get-pip.py \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Install dependencies
RUN pip install --no-cache-dir \
    torch==2.5.1 --index-url https://download.pytorch.org/whl/cu124 \
    transformers \
    sentence-transformers \
    fastapi \
    uvicorn

# Copy pre-downloaded embedding model with all weights
COPY models/hub/models--Qwen--Qwen3-Embedding-0.6B /models/Qwen3-Embedding-0.6B

# Copy the server script
COPY src/embedding_server.py /embedding_server.py

# Verify model files exist
RUN ls -la /models/Qwen3-Embedding-0.6B/ && \
    test -f /models/Qwen3-Embedding-0.6B/model.safetensors || \
    test -f /models/Qwen3-Embedding-0.6B/pytorch_model.bin || \
    (echo "Model weights not found!" && exit 1)

EXPOSE 8001

CMD ["uvicorn", "embedding_server:app", "--host", "0.0.0.0", "--port", "8001"]